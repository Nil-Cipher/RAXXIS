#include "LedControl.h"
LedControl lc=LedControl(12,11,10,4);
void setup() {
  // put your setup code here, to run once:
  lc.shutdown(0,false);
  /* Set the brightness to a medium values */
  lc.setIntensity(0,8);
  /* and clear the display */
  lc.clearDisplay(0);

  byte [] s = new byte [5]; //help
  //The shapes can all be draw in a 4x2 grid. The first 4 bits represent the top column, last 4 bits represent the bottom column.
  s[0]= B01001110;
  s[1]= B11001100;
  s[2]= B01101100; 
  s[3]= B11100010; 
  s[4]= B11110000};
  randomSeed(analogRead(0));//insert pin number that is unconnected!;
}

void loop() {
  // put your main code here, to run repeatedly:
  int addr = 0;
  bool placed = false;
  
  if (placed)
  {
    byte shape = generateShape();
    lc.setColumn (addr, 0, topCol(shape));
    lc.setColumn (addr, 1, bottomCol(shape));
  }

}

byte generateShape () {
  int rand = random(0,5);
  return s[rand];
}

byte topCol (byte shape){
  shape = shape >> 4;
  shape = shape << 4;
  return shape;
}

byte bottomCol (byte shape){
  shape = shape << 4;
  shape = shape >> 4;
  return shape;
}



